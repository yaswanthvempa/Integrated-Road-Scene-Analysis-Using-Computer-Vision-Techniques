gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)
blur = cv2.GaussianBlur(gray, (5,5), 0)
edges = cv2.Canny(blur, 50, 150)

plt.figure(figsize=(14,6))
plt.subplot(1,3,1); plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB)); plt.title("Original")
plt.axis("off")
plt.subplot(1,3,2); plt.imshow(blur, cmap="gray"); plt.title("Gaussian Blur")
plt.axis("off")
plt.subplot(1,3,3); plt.imshow(edges, cmap="gray"); plt.title("Canny Edge Detection")
plt.axis("off")
plt.show()
