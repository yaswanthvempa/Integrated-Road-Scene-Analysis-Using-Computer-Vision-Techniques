# üîπ Unit 2: Shape & Region Detection (Enhanced)
import cv2
import matplotlib.pyplot as plt

# Load the image
image_path = "/content/lane 5.jpg"
img = cv2.imread(image_path)
if img is None:
    raise FileNotFoundError("‚ùå Could not load image.")
    
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# --- Adaptive Thresholding for better visibility ---
adaptive_thresh = cv2.adaptiveThreshold(
    gray, 255, cv2.ADAPTIVE_THRESH_GAUSSIAN_C, cv2.THRESH_BINARY_INV, 11, 5
)

# --- Find contours and draw them ---
contours, _ = cv2.findContours(adaptive_thresh, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
shape_img = img.copy()
cv2.drawContours(shape_img, contours, -1, (0, 255, 0), 2)

# --- Display Output ---
plt.figure(figsize=(8, 6))
plt.imshow(cv2.cvtColor(shape_img, cv2.COLOR_BGR2RGB))
plt.title("Unit 2: Shape & Region Detection (Enhanced)")
plt.axis("off")
plt.show()
